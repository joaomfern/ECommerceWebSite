<table border="0" width="100%">
    <tr>
        <td>
            <form method"post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="UploadFiles">
            <img src="~/images/upload2.png" width="200" height="150"/>
            <div class="form-group">
                <div class="col-md-10">
                    <p><b> Selecione um ou mais artigos para enviar:</b></p>
                    <p>(Artigos com o mesmo nome serão sobrescritos)</p>
                    <input type="file" name="files" multiple class="button btn-btn-outline-primary" />
                </div>
            </div>
            <hr />
            
            <div class="form-group">
                <div class="col-md-10">     
                    <input type="submit" value="Enviar Arquivo(s)" class="button btn-btn-outline-primary" />
                </div>
            </div>
        </form>
        </td>
               <td>
                     <form method"post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="GetImagens">
                        <img src="~/images/visualizar1.jpg" width="200" height="200"/>    
                        <div class="form-group">
                <div class="col-md-10">     
                         <p>Visualizar artigos na pasta do servidor:</p>
                </div>
            </div>
              <hr />
            
            <div class="form-group">
                <div class="col-md-10">     
                    <input type="submit" value="Visualizar Arquivos no Servidor" class="button btn-btn-outline-primary" />
                </div>
            </div>
                     
                     </form>
        </td>
    </tr>
</table>
<br />
<div class="container">
    @if (ViewData["Deletado"] != null)
    {
        <li>@ViewData["Deletado"]</li>
    }

</div>