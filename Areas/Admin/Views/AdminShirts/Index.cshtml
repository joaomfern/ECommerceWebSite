
@model ReflectionIT.Mvc.Paging.PagingList<EcommerceProject.Models.Shirt>

@{
    ViewData["Title"] = "Index";
}

<h1>Camisolas</h1>


<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="Filtro" value="@Model.RouteValue["Filter"]" />
    <button type="submit" class="btn btn-info"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>Procurar</button>
</form>
<br />
<p>
    <a asp-action="Create">Criar nova camisola</a>
</p>
Total de Camisolas : @Model.TotalRecordCount

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoCurta)
            </th>
    @*        <th>
                @Html.DisplayNameFor(model => model.DescricaoDetalhada)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
         @*   <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemThumbnailUrl)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IsFavourite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoCurta)
            </td>
    @*        <td>
                @Html.DisplayFor(modelItem => item.DescricaoDetalhada)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
       @*     <td>
                @Html.DisplayFor(modelItem => item.ImagemUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagemThumbnailUrl)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.IsFavourite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShirtId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShirtId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShirtId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>
