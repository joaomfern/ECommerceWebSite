@model CarrinhoCompraViewModel

<div class="container">
<div class="row checkoutForm">

    <div>
        <h4><img src="~/images/Full-Cart-icon.png" class="img-fluid" /> &nbsp; O seu carrinho de compras: </h4>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr >
                <th class="text-center">Quantidade</th>
                <th>Camisola</th>
                <th class="text-right">Preço</th>
                <th class="text-right">Subtotal</th>
                <th class="text-center">Remover</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems)
                {
                    <tr>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-left"><img src="@Url.Content(item.Shirt.ImagemUrl)" width="40" height="40">&nbsp; @item.Shirt.Nome</td>
                        <td class="text-right">@item.Shirt.Preco.ToString("c")</td>
                        <td class="text-right">@((item.Quantidade*item.Shirt.Preco).ToString("c"))</td>
                        <td class="text-center">
                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra"
                            asp-route-shirtId="@item.Shirt.ShirtId"><img src="~/images/remove.ico" width="30px" height="30px" ></a>
                        </td>
                    </tr>
                }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">@Model.CarrinhoCompraTotal.ToString("c")</td>
                 <td colspan="3" class="text-right"></td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group">
            <a class = "btn btn-success" asp-controller="Pedido" asp-action="Checkout">Concluir Pedido</a>&nbsp;
            <a class = "btn btn-primary" asp-controller="Shirt" asp-action="List">Continuar Comprando</a>
        </div>
    </div>
    <br />
</div>
</div>